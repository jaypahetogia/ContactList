<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactListApp.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Entry x:Name="FirstNameEntry" Placeholder="First Name"/>
            <Entry x:Name="LastNameEntry" Placeholder="Last Name"/>
            <Entry x:Name="PhoneEntry" Placeholder="Phone Number"/>
            <Entry x:Name="EmailEntry" Placeholder="Email"/>

            <Button Text="Add Contact" Clicked="OnAddContact"/>
            <Button Text="Remove Contact" Clicked="OnRemoveContact"/>
            <Button Text="Update Contact" Clicked="OnUpdateContact"/>
            <Button Text="Search Contact" Clicked="OnSearchContact"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
